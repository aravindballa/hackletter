{
  "private": true,
  "name": "hackletter-website",
  "description": "",
  "license": "",
  "scripts": {
    "build": "yarn build:css && remix build",
    "build:css": "tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css",
    "dev": "concurrently \"yarn dev:css\" \"yarn dev:remix\"",
    "postinstall": "remix setup cloudflare-workers",
    "dev:css": "tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css --watch",
    "dev:remix": "remix dev",
    "build:worker": "esbuild --define:process.env.NODE_ENV='\"production\"' --minify --bundle --sourcemap --outdir=dist ./worker",
    "dev:worker": "esbuild --define:process.env.NODE_ENV='\"development\"' --bundle --sourcemap --outdir=dist ./worker",
    "start": "miniflare --build-command \"yarn dev:worker\" --watch",
    "deploy": "yarn build && wrangler publish"
  },
  "dependencies": {
    "@remix-run/cloudflare-workers": "^1.1.1",
    "@remix-run/react": "^1.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@remix-run/dev": "^1.1.1",
    "@remix-run/serve": "^1.1.1",
    "@tailwindcss/typography": "^0.5.0",
    "@types/marked": "^4.0.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "concurrently": "^7.0.0",
    "date-fns": "^2.28.0",
    "esbuild": "0.13.14",
    "htmlparser2": "^7.2.0",
    "marked": "^4.0.9",
    "miniflare": "2.0.0-next.3",
    "postcss": "^8.4.5",
    "tailwindcss": "^3.0.11",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "main": "dist/worker.js"
}
